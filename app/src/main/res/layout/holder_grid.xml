<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/grade_img_length"
        android:layout_height="@dimen/grade_img_length" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_l" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/text_size_s" />

    <TextView
        android:id="@+id/tv_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_s" />

    <TextView
        android:id="@+id/tv_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label1"
        android:layout_alignLeft="@+id/tv_label1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_s" />
</RelativeLayout>
