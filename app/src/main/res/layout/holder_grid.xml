<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/grid_padding"
        android:layout_marginTop="@dimen/grid_padding"
        android:layout_marginRight="@dimen/grid_padding"
        android:background="@drawable/grid_bg"
        android:padding="@dimen/grid_padding">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/grade_img_length"
            android:layout_height="@dimen/grade_img_length" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_padding"
            android:layout_toEndOf="@+id/img"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title"
            android:background="@drawable/grid_desc_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_s" />

        <TextView
            android:id="@+id/tv_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_label2"
            android:layout_alignStart="@+id/img"
            android:layout_marginTop="@dimen/grid_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_s" />
    </RelativeLayout>
</RelativeLayout>
