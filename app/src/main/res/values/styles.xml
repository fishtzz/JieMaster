<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Title">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorMain</item>
    </style>

    <style name="Title.Text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/padding_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_horizontal</item>
    </style>

    <style name="ProgressBarHorizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_dark_custom</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

</resources>
